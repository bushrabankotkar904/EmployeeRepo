@model EmpMVC.Models.Employee

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Employee</h2>
    </div>

    <form method="post" asp-action="DeleteEmp">
        
        <div asp-validation-summary="All"></div>
        <input type="hidden" asp-for="EmployeeId" />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="FirstName">First Name</label>
                <input type="text" class="form-control mb-3" asp-for="FirstName" disabled>
                <span asp-validation-for="FirstName" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="LastName">LastName</label>
                <input type="text" class="form-control mb-3" asp-for="LastName" disabled>
                <span asp-validation-for="LastName" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Designation">Designation</label>
                <input type="text" class="form-control mb-3" asp-for="Designation" disabled>
                <span asp-validation-for="Designation" class=" alert-danger"></span>
            </div>
            
            <div class="form-group col-md-6 mb-3">
                <label asp-for="DepartmentId">Department</label>
                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId" disabled>
                    <option value="">Select</option>
                </select>
                <span asp-validation-for="DepartmentId" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Address">Address</label>
                <input type="text" class="form-control mb-3" asp-for="Address" disabled>
                <span asp-validation-for="Address" class=" alert-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-lg btn-danger p-2"><i class="bi bi-trash-fill"></i>Delete</button>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>
